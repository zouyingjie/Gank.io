<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/girl_imgae_card_margin_top"
    android:layout_marginBottom="@dimen/girl_imgae_card_margin_bottom"
    android:layout_marginStart="@dimen/girl_imgae_card_margin_start"
    android:layout_marginEnd="@dimen/girl_imgae_card_margin_end"
    app:cardCornerRadius="@dimen/girl_imgae_card_corner_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_dp_4"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_girl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/girl_image_card_height"
            fresco:placeholderImage="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_girl_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/girl_image_card_desc_text_size" />

    </LinearLayout>
</android.support.v7.widget.CardView>